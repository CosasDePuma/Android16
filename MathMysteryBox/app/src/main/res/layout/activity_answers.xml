<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/answersbg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gatete.mathmysterybox.AnswersActivity"
    android:orientation="vertical"
    android:background="#FFFFFF"
    style="@style/Theme.AppCompat.NoActionBar">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgf">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgCerebro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/imageView5"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/imageView5"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:maxHeight="100dp"
                android:scaleType="fitCenter"
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:srcCompat="@drawable/cerebro" />

            <ImageView
                android:id="@+id/imgCuerpo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView3"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:maxHeight="120dp"
                android:scaleType="fitCenter"
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:srcCompat="@drawable/cuerpo" />

            <ImageView
                android:id="@+id/imgCorazon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView4"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:maxHeight="130dp"
                android:scaleType="fitCenter"
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:srcCompat="@drawable/corazon" />

            <ImageView
                android:id="@+id/imgADN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView5"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:clickable="true"
                android:maxHeight="130dp"
                android:scaleType="fitCenter"
                android:scaleX="0.4"
                android:scaleY="0.4"
                app:srcCompat="@drawable/adn" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
